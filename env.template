# MeistroCraft Environment Variables Template
# Copy this file to .env and fill in your actual API keys and settings

# API Keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here

# GitHub Integration (Phase 1)
GITHUB_API_TOKEN=ghp_your-github-token-here
GITHUB_USERNAME=your-github-username
GITHUB_ORGANIZATION=your-github-org-name

# Application Settings
MEISTROCRAFT_ENV=development
MEISTROCRAFT_LOG_LEVEL=INFO

# Token Usage Limits (optional)
DAILY_TOKEN_LIMIT=100000
MONTHLY_TOKEN_LIMIT=3000000
DAILY_COST_LIMIT_USD=50.00
MONTHLY_COST_LIMIT_USD=1500.00

# Security Settings
ENCRYPT_SESSIONS=true
SESSION_TIMEOUT_HOURS=24

# Performance Settings
MAX_CONCURRENT_TASKS=3
REQUEST_TIMEOUT_SECONDS=300

# Development Settings (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false